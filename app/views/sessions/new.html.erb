
<h1>Sign In</h1>
<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<%=form_for @user, url: sessions_create_path do |f| %>
<%=f.label :name%>
<%=f.text_field :name%> <br>
<%=f.label :password %>
<%=f.password_field :password %> <br>
<%=f.submit "Sign In" %>
<% end %>
