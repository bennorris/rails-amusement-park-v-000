<h1>Create an account.</h1>

<%=form_for @user do |f| %>
<%=f.label :name %>
<%=f.text_field :name %><br>
<%=f.label :height %>
<%=f.text_field :height %><br>
<%=f.label :happiness %>
<%=f.text_field :happiness %><br>
<%=f.label :nausea %>
<%=f.text_field :nausea %><br>
<%=f.label :tickets %>
<%=f.text_field :tickets %><br>
<%= f.label :admin, "Check if you're a theme park owner" %>
<%= f.check_box :admin %><br>
<%=f.label :password %>
<%=f.text_field :password %><br>
<%=f.submit "Create User" %>
<% end %>
